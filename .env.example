# =================================================================
# CONFIGURACIÓN DE EJEMPLO - COPIAR A .env Y AJUSTAR
# =================================================================
# INSTRUCCIONES: 
# 1. Copiar este archivo: cp .env.example .env
# 2. Ajustar valores según tu entorno
# 3. NUNCA commitear el archivo .env
# =================================================================

# === SERVER & DIRECTORIOS ===
VITE_API_HOST="localhost"          # IP pública para el frontend
FRONT_DIR="/root/FrontAI"          # Directorio del frontend
BACK_DIR="/root/BackAI"            # Directorio del backend
POWER_REPO=https://repo.fury.io/mgiessing  # Repo para wheels ppc64le

# === REPOSITORIOS GIT ===
REPO_FRONT_URL="https://github.com/Junstant/IBM-AI-Platform-Front.git"
REPO_BACK_URL="https://github.com/Junstant/IBM-AI-Platform-Back.git"

# === CONFIGURACIÓN DE BASE DE DATOS ===
DB_PORT=8070
DB_USER=postgres
DB_HOST=postgres
DB_PASSWORD=root                   # CAMBIAR EN PRODUCCIÓN
DB1_NAME=banco_global
DB2_NAME=bank_transactions
DB3_NAME=ai_platform_stats

# === PUERTOS PUBLICADOS ===
# APIs
TEXTOSQL_API_PORT=8000
FRAUDE_API_PORT=8001
STATS_PORT=8003
RAG_API_PORT=8004

# Milvus
MILVUS_PORT=19530
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Modelos LLM
GEMMA_2B_PORT=8085
GEMMA_4B_PORT=8086
ARTIC_TEXT2SQL_PORT=8087
MISTRAL_PORT=8088
DEEPSEEK_8B_PORT=8089
EMBEDDINGS_PORT=8090

# Frontend
NGINX_PORT=2012

# === CONFIGURACIÓN DE DOCKER COMPOSE ===
COMPOSE_PROJECT_NAME=aipl
TOKEN_HUGGHINGFACE=                # Token de HuggingFace (opcional)

# === EMBEDDINGS SERVICE ===
EMBEDDING_SERVICE_HOST=embeddings-api
EMBEDDING_SERVICE_PORT=8080
EMBEDDING_MODEL=nomic-embed-text-v1.5
EMBEDDING_DIMENSION=768

# === SCRIPT DE INSTALACIÓN ===
DEFAULT_PORTS=(2012 8000 8001 8070 8085 8086 8087 8088 8089 8090)
MIN_DISK_GB=20
MIN_RAM_GB=4
